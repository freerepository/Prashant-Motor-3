<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corner8_white"
    android:backgroundTint="#01866D"
    android:layout_margin="@dimen/_8sdp"
    android:paddingTop="16dp"
    android:elevation="@dimen/_8sdp"
    android:paddingBottom="32dp">

    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_8sdp"
        android:background="@drawable/et_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textColorHint="@color/hint_color"
        android:textColor="@android:color/black"
        android:hint="User ID"/>
    <Spinner
        android:id="@+id/sp_year"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:padding="@dimen/_4sdp"
        android:gravity="center"
        android:dropDownSelector="@android:drawable/spinner_background"
        app:layout_constraintTop_toBottomOf="@+id/et_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sp_month"
        android:background="@drawable/corner_stroke"
        android:layout_marginTop="24dp" />
    <Spinner
        android:id="@+id/sp_month"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_4sdp"
        android:padding="@dimen/_4sdp"
        android:gravity="center"
        android:dropDownSelector="@android:drawable/spinner_background"
        app:layout_constraintTop_toBottomOf="@+id/et_search"
        app:layout_constraintStart_toEndOf="@+id/sp_year"
        app:layout_constraintEnd_toStartOf="@+id/sp_date"
        android:background="@drawable/corner_stroke"
        android:layout_marginTop="24dp" />
    <Spinner
        android:id="@+id/sp_date"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:padding="@dimen/_4sdp"
        android:gravity="center"
        android:dropDownSelector="@android:drawable/spinner_background"
        app:layout_constraintTop_toBottomOf="@+id/et_search"
        app:layout_constraintStart_toEndOf="@+id/sp_month"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/corner_stroke"
        android:layout_marginTop="24dp" />
    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="0dp"
        android:minHeight="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintTop_toBottomOf="@id/sp_year"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_ok"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:gravity="center"
        android:background="@drawable/btn_selector"
        android:textColor="@android:color/white"
        android:textSize="24dp"
        android:fontFamily="@font/ortica_bold"
        android:text="SKIP"/>
    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="0dp"
        android:minHeight="@dimen/_40sdp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sp_year"
        app:layout_constraintStart_toEndOf="@+id/tv_skip"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:gravity="center"
        android:background="@drawable/btn_selector"
        android:textColor="@android:color/white"
        android:textSize="24dp"
        android:fontFamily="@font/ortica_bold"
        android:text="OK"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>